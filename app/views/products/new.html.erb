<h1 class="text-center header">KATHERINA'S ONLINE SHOP</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h2>Create a new product:</h3>
      <%= render partial: 'form' %>
      <br>
      <%= link_to("Back to Index", products_path) %>

    </div> <!-- end col-->

    <div class="col-xs-12 col-md-6">
    </div> <!-- end col-->

  </div> <!-- end row-->
</div> <!-- end container-->
