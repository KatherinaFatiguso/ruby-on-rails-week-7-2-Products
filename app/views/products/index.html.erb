
<h1>Welcome to my online shop</h1>

<h2>Products list</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% @products.each do |product| %>
    <tr>
      <td><%= link_to(product.name, product_path(product)) %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td><%= link_to('Delete', product_path(product), method: :delete, data: { confirm: "Do you want to delete this product?" } )%></td>
      <td><%= link_to('Edit', edit_product_path(product)) %></td>
    </tr>
    <% end %>
</table>
<br>
<%= link_to('Create a new product', new_product_path)%>
