<tr>
  <td><%= link_to(product_row.name, product_path(product_row)) %></td>
  <td><%= number_to_currency(product_row.price) %></td>
  <td><%= product_row.views %></td>
  <td><%= time_ago_in_words(product_row.updated_at) %></td>
  <td><%= time_ago_in_words(product_row.created_at) %></td>
  <td><%= link_to('Delete', product_path(product_row), method: :delete, data: { confirm: "Do you want to delete this product?" } )%></td>
  <td><%= link_to('Edit', edit_product_path(product_row)) %></td>
</tr>
